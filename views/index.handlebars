<h1>Burgers</h1>

<h2>Burgers to eat</h2>

<ul>
  {{#each burgers}}
    {{#unless Devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless Devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Cat</button>
</form>
